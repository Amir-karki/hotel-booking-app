@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Manage Bookings";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <h1>Manage Bookings</h1>

    <div class="btn-group mt-3">
        <a asp-action="Index" class="btn btn-pill @(ViewBag.CurrentStatus == null ? "btn-primary" : "btn-outline")">All</a>
        <a asp-action="Index" asp-route-status="@BookingStatus.Pending" class="btn btn-pill @(ViewBag.CurrentStatus?.ToString() == "Pending" ? "btn-primary" : "btn-outline")">Pending</a>
        <a asp-action="Index" asp-route-status="@BookingStatus.Confirmed" class="btn btn-pill @(ViewBag.CurrentStatus?.ToString() == "Confirmed" ? "btn-primary" : "btn-outline")">Confirmed</a>
        <a asp-action="Index" asp-route-status="@BookingStatus.Cancelled" class="btn btn-pill @(ViewBag.CurrentStatus?.ToString() == "Cancelled" ? "btn-primary" : "btn-outline")">Cancelled</a>
        <a asp-action="Index" asp-route-status="@BookingStatus.Completed" class="btn btn-pill @(ViewBag.CurrentStatus?.ToString() == "Completed" ? "btn-primary" : "btn-outline")">Completed</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Guest</th>
                        <th>Hotel</th>
                        <th>Room</th>
                        <th>Check-in</th>
                        <th>Check-out</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>#@booking.Id.ToString().PadLeft(6, '0')</td>
                            <td>
                                @booking.GuestFullName<br />
                                <small class="text-muted">@booking.GuestEmail</small>
                            </td>
                            <td>@booking.Room.Hotel.Name</td>
                            <td>@booking.Room.RoomType</td>
                            <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                            <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                            <td>$@booking.TotalPrice.ToString("N2")</td>
                            <td>
                                <span class="badge badge-@booking.Status.ToString().ToLower()">
                                    @booking.Status
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-pill btn-outline">Details</a>
                                    <form asp-action="Delete" asp-route-id="@booking.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-pill btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
