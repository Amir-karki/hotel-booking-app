@model HotelWithRoomsViewModel
@{
    ViewData["Title"] = "Create Hotel";
    Layout = "_AdminLayout";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-pill btn-outline">Back to List</a>
</div>

<div class="card">
    <div class="card-body">
        <h1 class="mb-4">Create New Hotel</h1>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Country" class="form-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="StarRating" class="form-label"></label>
                    <select asp-for="StarRating" class="form-control">
                        <option value="1">1 Star</option>
                        <option value="2">2 Stars</option>
                        <option value="3">3 Stars</option>
                        <option value="4">4 Stars</option>
                        <option value="5">5 Stars</option>
                    </select>
                    <span asp-validation-for="StarRating" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label class="form-label">Status</label>
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <hr class="my-4" />
            <h3 class="mb-3">Default Room Type</h3>
            <p class="text-muted mb-3">Configure the first room type for this hotel. You can add more room types after creating the hotel.</p>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="RoomType" class="form-label"></label>
                    <input asp-for="RoomType" class="form-control" placeholder="e.g., Standard Room, Deluxe Suite" />
                    <span asp-validation-for="RoomType" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PricePerNight" class="form-label">Price Per Night ($)</label>
                    <input asp-for="PricePerNight" type="number" step="0.01" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="RoomDescription" class="form-label">Room Description</label>
                <textarea asp-for="RoomDescription" rows="3" class="form-control" placeholder="Describe the room amenities, size, and features"></textarea>
                <span asp-validation-for="RoomDescription" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Capacity" class="form-label">Guest Capacity</label>
                    <input asp-for="Capacity" type="number" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="TotalRooms" class="form-label">Number of Rooms Available</label>
                    <input asp-for="TotalRooms" type="number" class="form-control" />
                    <span asp-validation-for="TotalRooms" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Room Amenities</label>
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-check">
                            <input asp-for="HasWifi" class="form-check-input" />
                            <label asp-for="HasWifi" class="form-check-label">WiFi</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            <input asp-for="HasAirConditioning" class="form-check-input" />
                            <label asp-for="HasAirConditioning" class="form-check-label">Air Conditioning</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-check">
                            <input asp-for="HasTelevision" class="form-check-input" />
                            <label asp-for="HasTelevision" class="form-check-label">Television</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-check">
                            <input asp-for="HasMinibar" class="form-check-input" />
                            <label asp-for="HasMinibar" class="form-check-label">Minibar</label>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-check">
                            <input asp-for="HasBalcony" class="form-check-input" />
                            <label asp-for="HasBalcony" class="form-check-label">Balcony</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Room Images (Optional)</label>
                <div class="mb-2">
                    <input asp-for="RoomImage1" class="form-control" placeholder="Room Image URL 1" />
                    <span asp-validation-for="RoomImage1" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <input asp-for="RoomImage2" class="form-control" placeholder="Room Image URL 2" />
                    <span asp-validation-for="RoomImage2" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <input asp-for="RoomImage3" class="form-control" placeholder="Room Image URL 3" />
                    <span asp-validation-for="RoomImage3" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-pill btn-primary">Create Hotel with Room</button>
                <a asp-action="Index" class="btn btn-pill btn-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
