@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <h1>Dashboard</h1>
    <p class="text-muted">Welcome to the admin panel</p>
</div>

<div class="stats-grid mb-4">
    <div class="stat-card">
        <div class="stat-icon stat-icon-primary">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            </svg>
        </div>
        <div>
            <div class="stat-value">@ViewBag.TotalHotels</div>
            <div class="stat-label">Total Hotels</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon stat-icon-success">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
        </div>
        <div>
            <div class="stat-value">@ViewBag.TotalRooms</div>
            <div class="stat-label">Total Rooms</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon stat-icon-info">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
        </div>
        <div>
            <div class="stat-value">@ViewBag.TotalBookings</div>
            <div class="stat-label">Total Bookings</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon stat-icon-warning">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
        </div>
        <div>
            <div class="stat-value">@ViewBag.PendingBookings</div>
            <div class="stat-label">Pending Bookings</div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Recent Bookings</h3>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Guest</th>
                            <th>Hotel</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>#@booking.Id.ToString().PadLeft(6, '0')</td>
                                <td>@booking.GuestFullName</td>
                                <td>@booking.Room.Hotel.Name</td>
                                <td>@booking.CheckInDate.ToString("MMM dd, yyyy")</td>
                                <td>@booking.CheckOutDate.ToString("MMM dd, yyyy")</td>
                                <td>$@booking.TotalPrice.ToString("N2")</td>
                                <td>
                                    <span class="badge badge-@booking.Status.ToString().ToLower()">
                                        @booking.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-controller="AdminBookings" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-pill btn-outline">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No bookings yet.</p>
        }
    </div>
</div>
