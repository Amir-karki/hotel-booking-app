services:
  - type: web
    name: hotel-booking-app
    env: docker
    plan: free
    autoDeploy: true
    buildCommand: dotnet publish -c Release -o out
    startCommand: ASPNETCORE_URLS=http://0.0.0.0:${PORT} dotnet out/HotelBookingApp.dll
    envVars:
      - key: PORT
        value: 10000
      # Add your connection string if needed:
      # - key: ConnectionStrings__DefaultConnection
      #   value: <your-connection-string>
