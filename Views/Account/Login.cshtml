@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card auth-card">
                <div class="card-body">
                    <h1 class="auth-title">Welcome Back</h1>
                    <p class="auth-subtitle">Login to manage your bookings</p>

                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-pill btn-primary w-100 mb-3">Login</button>

                        <p class="text-center mb-0">
                            Don't have an account?
                            <a asp-action="Register" class="text-primary">Register here</a>
                        </p>

                        <div class="alert alert-info mt-3">
                            <strong>Demo Accounts:</strong><br />
                            Admin: admin@demo.com / Admin123$<br />
                            User: user@demo.com / User123$
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
