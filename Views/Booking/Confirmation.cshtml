@model Booking
@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container py-5">
    <div class="confirmation-container">
        <div class="confirmation-icon">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
        </div>

        <h1 class="confirmation-title">Booking Confirmed!</h1>
        <p class="confirmation-subtitle">Thank you for your booking. We've sent a confirmation email to @Model.GuestEmail</p>

        <div class="card confirmation-card">
            <div class="card-body">
                <h3 class="mb-3">Booking Details</h3>

                <div class="confirmation-details">
                    <div class="detail-row">
                        <span class="detail-label">Booking ID:</span>
                        <strong>#@Model.Id.ToString().PadLeft(6, '0')</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Hotel:</span>
                        <strong>@Model.Room.Hotel.Name</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Room Type:</span>
                        <strong>@Model.Room.RoomType</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Check-in:</span>
                        <strong>@Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Check-out:</span>
                        <strong>@Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Number of Guests:</span>
                        <strong>@Model.NumberOfGuests</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Guest Name:</span>
                        <strong>@Model.GuestFullName</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Email:</span>
                        <strong>@Model.GuestEmail</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Phone:</span>
                        <strong>@Model.GuestPhone</strong>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                    {
                        <div class="detail-row">
                            <span class="detail-label">Special Requests:</span>
                            <strong>@Model.SpecialRequests</strong>
                        </div>
                    }

                    <div class="detail-row detail-total">
                        <span class="detail-label">Total Amount Paid:</span>
                        <strong class="text-success">$@Model.TotalPrice.ToString("N2")</strong>
                    </div>

                    <div class="detail-row">
                        <span class="detail-label">Payment ID:</span>
                        <strong class="text-muted">@Model.PaymentIntentId</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="confirmation-actions">
            <a asp-action="MyBookings" class="btn btn-pill btn-primary">View My Bookings</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-pill btn-outline">Browse More Hotels</a>
        </div>
    </div>
</div>
