@model IEnumerable<Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-4">
    <h1 class="mb-4">My Bookings</h1>

    @if (Model.Any())
    {
        <div class="bookings-list">
            @foreach (var booking in Model)
            {
                <div class="booking-item-card">
                    <div class="booking-status-badge booking-status-@booking.Status.ToString().ToLower()">
                        @booking.Status
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <h3>@booking.Room.Hotel.Name</h3>
                            <p class="text-muted mb-2">@booking.Room.Hotel.City, @booking.Room.Hotel.Country</p>
                            <p class="mb-1"><strong>Room:</strong> @booking.Room.RoomType</p>

                            <div class="booking-dates">
                                <div>
                                    <small class="text-muted">Check-in</small>
                                    <div><strong>@booking.CheckInDate.ToString("MMM dd, yyyy")</strong></div>
                                </div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                    <polyline points="12 5 19 12 12 19"></polyline>
                                </svg>
                                <div>
                                    <small class="text-muted">Check-out</small>
                                    <div><strong>@booking.CheckOutDate.ToString("MMM dd, yyyy")</strong></div>
                                </div>
                            </div>

                            <div class="mt-2">
                                <small class="text-muted">Guests:</small> @booking.NumberOfGuests |
                                <small class="text-muted">Booked on:</small> @booking.BookedAt.ToString("MMM dd, yyyy")
                            </div>
                        </div>

                        <div class="col-md-4 text-md-end">
                            <div class="booking-price mb-3">
                                <small class="text-muted">Total Amount</small>
                                <div class="h4 mb-0">$@booking.TotalPrice.ToString("N2")</div>
                            </div>

                            <div class="booking-actions">
                                <a asp-action="Confirmation" asp-route-id="@booking.Id" class="btn btn-pill btn-outline btn-sm">View Details</a>

                                @if (booking.Status == BookingStatus.Confirmed && booking.CheckInDate > DateTime.Today)
                                {
                                    <form asp-action="Cancel" asp-route-id="@booking.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-pill btn-outline-danger btn-sm">Cancel Booking</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <h3>No bookings yet</h3>
            <p>Start exploring our hotels and make your first booking!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-pill btn-primary">Browse Hotels</a>
        </div>
    }
</div>
