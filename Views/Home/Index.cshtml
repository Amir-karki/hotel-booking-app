@model HotelSearchViewModel
@{
    ViewData["Title"] = "Find Your Perfect Hotel";
}

<div class="hero-section">
    <div class="container">
        <h1 class="hero-title">Find Your Perfect Stay</h1>
        <p class="hero-subtitle">Discover amazing hotels around the world</p>

        <div class="search-card">
            <form method="get" asp-action="Index">
                <div class="search-grid">
                    <div class="form-group">
                        <label asp-for="SearchTerm" class="form-label">Search</label>
                        <input asp-for="SearchTerm" class="form-control" placeholder="Hotel name, city, or description..." />
                    </div>

                    <div class="form-group">
                        <label asp-for="City" class="form-label">City</label>
                        <select asp-for="City" class="form-control">
                            <option value="">All Cities</option>
                            @foreach (var city in Model.Cities)
                            {
                                <option value="@city">@city</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Country" class="form-label">Country</label>
                        <select asp-for="Country" class="form-control">
                            <option value="">All Countries</option>
                            @foreach (var country in Model.Countries)
                            {
                                <option value="@country">@country</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="MinStarRating" class="form-label">Min Stars</label>
                        <select asp-for="MinStarRating" class="form-control">
                            <option value="">Any</option>
                            <option value="3">3+</option>
                            <option value="4">4+</option>
                            <option value="5">5</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaxPrice" class="form-label">Max Price/Night</label>
                        <input asp-for="MaxPrice" type="number" step="0.01" class="form-control" placeholder="Any" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-pill btn-primary w-100 mt-4">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"></circle>
                                <path d="m21 21-4.35-4.35"></path>
                            </svg>
                            Search Hotels
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container py-5">
    @if (Model.Hotels.Any())
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Available Hotels (@Model.TotalItems)</h2>
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.City) ||
                 !string.IsNullOrEmpty(Model.Country) || Model.MinStarRating.HasValue || Model.MaxPrice.HasValue)
            {
                <a asp-action="Index" class="btn btn-pill btn-outline">Clear Filters</a>
            }
        </div>

        <div class="hotel-grid">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="hotel-card">
                    <div class="hotel-image">
                        <img src="@hotel.ImageUrl" alt="@hotel.Name" onerror="this.src='https://via.placeholder.com/800x600?text=Hotel+Image'" />
                        <div class="hotel-rating-badge">
                            @for (int i = 0; i < hotel.StarRating; i++)
                            {
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                </svg>
                            }
                        </div>
                    </div>
                    <div class="hotel-content">
                        <h3 class="hotel-name">@hotel.Name</h3>
                        <p class="hotel-location">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            @hotel.City, @hotel.Country
                        </p>
                        <p class="hotel-description">@hotel.Description</p>

                        @if (hotel.Reviews.Any())
                        {
                            <div class="hotel-reviews">
                                <span class="rating-score">@hotel.AverageRating.ToString("F1")</span>
                                <span class="rating-text">(@hotel.Reviews.Count reviews)</span>
                            </div>
                        }

                        <div class="hotel-footer">
                            @if (hotel.Rooms.Any())
                            {
                                <div class="hotel-price">
                                    From <strong>$@hotel.Rooms.Min(r => r.PricePerNight).ToString("N2")</strong>/night
                                </div>
                            }
                            <a asp-action="HotelDetails" asp-route-id="@hotel.Id" class="btn btn-pill btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="pagination">
                @if (Model.PageNumber > 1)
                {
                    <a asp-action="Index"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-city="@Model.City"
                       asp-route-country="@Model.Country"
                       asp-route-minStarRating="@Model.MinStarRating"
                       asp-route-maxPrice="@Model.MaxPrice"
                       asp-route-pageNumber="@(Model.PageNumber - 1)"
                       class="btn btn-pill btn-outline">Previous</a>
                }

                <span class="pagination-info">Page @Model.PageNumber of @Model.TotalPages</span>

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-city="@Model.City"
                       asp-route-country="@Model.Country"
                       asp-route-minStarRating="@Model.MinStarRating"
                       asp-route-maxPrice="@Model.MaxPrice"
                       asp-route-pageNumber="@(Model.PageNumber + 1)"
                       class="btn btn-pill btn-outline">Next</a>
                }
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <h3>No hotels found</h3>
            <p>Try adjusting your search filters to find more results.</p>
            <a asp-action="Index" class="btn btn-pill btn-primary">View All Hotels</a>
        </div>
    }
</div>
